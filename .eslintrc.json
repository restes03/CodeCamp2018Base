{
    "extends": "google",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "linebreak-style" : ["error", "windows"],
        "no-undef" : "error",
        "no-var" : "off",
        "require-jsdoc": "off",
        "max-len": "off",
        "no-multiple-empty-lines": "off",
        "quotes": "off",
        "no-trailing-spaces": "off",
        "guard-for-in": "off"
    },
    "env": {
        "node" : true
    }
}